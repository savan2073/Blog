@page
@model Blog.Pages.CreateTag.CreateTagModel
@{
}
<body>
    <div class="bg-secondary bg-opacity-10 py-2">
        <div class="container">
            <h1>Add New Tag</h1>
        </div>
    </div>

    <div class="container py-5">
        <form method="post">
            <div class="mb-3">
                <label class="form-label" asp-for="Tag.Name"></label>
                <input type="text" class="form-control" id="name" name="name" asp-for="Tag.Name" />
                <span asp-validation-for="Tag.Name" class="text-danger" style="float: left;"></span>
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-dark" value="Tag.Id">Submit</button>
            </div>
        </form>
    </div>
</body>